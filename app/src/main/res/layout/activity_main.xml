<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yui.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        style="@style/inquiry_checkbox_style"
        android:background="@drawable/bg_radiobutton"
        tools:checked="true"
        tools:layout_height="wrap_content"
        tools:layout_width="wrap_content"
        />

    <RadioButton
        style="@style/inquiry_radiobutton_style"
        android:background="@drawable/bg_radiobutton"
        tools:checked="true"
        tools:layout_height="wrap_content"
        tools:layout_width="wrap_content"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/radio"
        android:background="@drawable/bg_inquiry_expand_arrow"
        android:button="@null"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:checked="false"
        tools:checked="false"
        />
</LinearLayout>
